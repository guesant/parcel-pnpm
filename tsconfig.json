{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ESNext"],
    "module": "commonjs",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
